<Application
    x:Class="UWPSerialTerminal.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPSerialTerminal"
    xmlns:vm="using:UWPSerialTerminal.ViewModels"
    RequestedTheme="Light">
    <Application.Resources>
        <vm:MainPageViewModel x:Key="ViewModel"></vm:MainPageViewModel>
        <Style x:Key="AppTitleStyle" TargetType="TextBlock" BasedOn="{StaticResource TitleTextBlockStyle}">
            <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundAccentBrush}"></Setter>
            <Setter Property="Margin" Value="8"></Setter>
        </Style>
    </Application.Resources>
</Application>
